/* miniprogram/pages/vip/vip.wxss */
/**index.wxss**/
page {
  padding-bottom: 50rpx;
  background: #f8f8f8;
}

.header {
  padding: 0 25rpx;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
  width: 100%;
  background:white;
  position:relative;
}

.user {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.user_box {
  display: flex;
  align-items: center;
}

.edit {
  display: flex;
  width: 70rpx;
  height: 70rpx;
  padding: 18rpx;
  box-sizing: border-box;
}

.edit image {
  width: 100%;
  height: 100%;
  transform: rotate(180deg);
}

.logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #fff;
  will-change: transform;
  position:relative;
}


.logo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;
}

.user_info {
  padding-left: 32rpx;
}

.user_name {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color:#333;
}

.vip_expires {
  margin-top: 12rpx;
  flex-direction: column;
  font-size: 27rpx;
  color:black;
}
.listGroup{
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  margin: 20rpx 0;
  padding-top: 40rpx;
  padding-bottom: 100rpx;
  border: 1rpx solid silver;
}
.listItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid white;
  padding: 10rpx;
  padding-bottom: 50rpx;
}
